/* pages/video/video.wxss */
.video{
  font-size: 26rpx;
  padding: 5rpx;
}
text{
  display: block;
}
.video_item{
  display: flex;
  border-bottom: 2px solid #226aff;
}
.video_img{
  flex: 1;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.video_img image{  
  width:200rpx;
  height: 200rpx;  
}
.info_container{
  flex:4;
  display: flex;
  justify-content: space-between;
}
.info{
  flex:6;
  padding-left:10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.score{
  flex:1;
}
.score_num{
  font-size:40rpx;
  color: red;
  font-weight: bold;
}